{
    "name": "tamohar",
    "version": "0.1.0",
    "private": true,
    "homepage": "/",
    "dependencies": {
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "firebase": "^10.8.0",
        "firebase-admin": "^13.2.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-firebase-hooks": "^5.1.1",
        "react-icons": "^5.0.1",
        "react-router-dom": "^6.22.0",
        "react-scripts": "5.0.1",
        "web-vitals": "^2.1.4",
        "dotenv": "^16.0.3"
    },
    "scripts": {
        "prepare-sw": "node src/utils/prepareSW.js",
        "prestart": "npm run prepare-sw",
        "start": "react-scripts start",
        "prebuild": "npm run prepare-sw && npm run security-check",
        "build": "react-scripts build",
        "build:production": "env-cmd -f .env.production npm run build",
        "postbuild": "npm run inject-csp && npm run copy-redirects",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "security-check": "npm audit --production && eslint --no-error-on-unmatched-pattern 'src/**/*.{js,jsx}'",
        "inject-csp": "node src/utils/injectCSP.js",
        "copy-redirects": "cp public/_redirects build/",
        "start:server": "node server/index.js",
        "start:dev": "concurrently \"npm run start\" \"npm run start:server\"",
        "start:prod": "NODE_ENV=production node server/index.js"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "rules": {
            "no-unused-vars": "warn",
            "react-hooks/exhaustive-deps": "warn",
            "jsx-a11y/anchor-is-valid": "warn"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "env-cmd": "^10.1.0",
        "eslint": "^8.56.0",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0"
    }
}